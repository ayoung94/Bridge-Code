	<insert id="insertHeart" parameterType="heart"><!-- sql-map-config-spring.xml에서 타입 alias정의 -->
        <!-- heart_confirm_time는 빠져있음. -->
        <![CDATA[  
        INSERT INTO heart(
        	   heart_id,
        	   heart_to_id,
			   heart_from_id,
			   heart_status,
			   heart_from_time) 
			   
        VALUES(
        	   heart_seq.nextval,
        	   #{heart_to_id},
        	   #{heart_from_id},
        	   0,
        	   sysdate)
        ]]>
	</insert>

	<update id="heartYES" parameterType="heart">
        <![CDATA[
        UPDATE heart SET
           heart_status = 1,
           heart_confirm_time = sysdate
        WHERE heart_id = #{heart_id}
        ]]>
	</update> 
	
